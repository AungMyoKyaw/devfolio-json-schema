---
import Layout from "../layouts/Layout.astro";
import ScrollToTop from "../components/ScrollToTop.astro";
import {
  Github,
  Code,
  CheckCircle,
  GraduationCap,
  Briefcase,
  Smartphone,
  Zap,
  Package,
  Download,
  Play,
  Settings,
  Database,
  Award,
  BookOpen,
  FileText,
  Heart
} from "lucide-astro";
---

<Layout
  title="DevFolio JSON Schema - Complete TypeScript Schema for Developer Portfolios"
>
  <main>
    <!-- Hero Section -->
    <section
      class="hero-bg hero-pattern relative pt-24 pb-32 text-white overflow-hidden"
    >
      <div
        class="max-w-7xl 2xl:max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8 2xl:px-12 grid lg:grid-cols-2 gap-8 lg:gap-16 2xl:gap-24 items-center relative z-10"
      >
        <div class="text-center lg:text-left w-full min-w-0">
          <div
            class="flex flex-wrap gap-2 sm:gap-3 mb-6 sm:mb-8 justify-center lg:justify-start"
          >
            <span
              class="bg-white/20 backdrop-blur-md px-2 sm:px-3 md:px-4 py-1 sm:py-1.5 md:py-2 rounded-full text-xs sm:text-sm font-medium border border-white/30 whitespace-nowrap"
              >TypeScript Ready</span
            >
            <span
              class="bg-white/20 backdrop-blur-md px-2 sm:px-3 md:px-4 py-1 sm:py-1.5 md:py-2 rounded-full text-xs sm:text-sm font-medium border border-white/30 whitespace-nowrap"
              >Zod Validation</span
            >
            <span
              class="bg-white/20 backdrop-blur-md px-2 sm:px-3 md:px-4 py-1 sm:py-1.5 md:py-2 rounded-full text-xs sm:text-sm font-medium border border-white/30 whitespace-nowrap"
              >JSON Schema</span
            >
          </div>
          <h1
            class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-extrabold leading-tight mb-4 sm:mb-6 w-full min-w-0 break-words hyphens-auto"
          >
            <span class="block">Complete Schema for</span>
            <span class="gradient-text block">Developer Portfolios</span>
          </h1>
          <p
            class="text-sm sm:text-base md:text-lg lg:text-xl xl:text-2xl mb-8 sm:mb-10 opacity-90 leading-relaxed w-full min-w-0 break-words hyphens-auto"
          >
            The only TypeScript-first JSON schema you need for professional
            developer portfolios. Built with modern web standards and enhanced
            with powerful validation.
          </p>
          <div
            class="flex flex-col gap-3 sm:gap-4 mb-8 sm:mb-12 justify-center lg:justify-start w-full min-w-0"
          >
            <a
              href="https://github.com/AungMyoKyaw/devfolio-json-schema"
              class="bg-white text-purple-600 font-semibold px-4 sm:px-6 md:px-8 py-3 sm:py-4 rounded-lg inline-flex items-center gap-2 sm:gap-3 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl text-sm sm:text-base md:text-lg min-h-[44px] justify-center w-full sm:w-auto max-w-full break-words"
              target="_blank"
            >
              <Github
                size={16}
                class="sm:w-5 sm:h-5"
                aria-label="GitHub icon"
              />
              <span class="truncate">Get Started on GitHub</span>
            </a>
            <a
              href="https://www.npmjs.com/package/devfolio-json-schema"
              class="bg-white/10 text-white font-semibold px-4 sm:px-6 md:px-8 py-3 sm:py-4 rounded-lg inline-flex items-center gap-2 sm:gap-3 border-2 border-white/30 backdrop-blur-sm transition-all duration-300 hover:bg-white/20 hover:border-white/50 text-sm sm:text-base md:text-lg min-h-[44px] justify-center w-full sm:w-auto max-w-full break-words"
              target="_blank"
            >
              <Package
                size={16}
                class="sm:w-5 sm:h-5"
                aria-label="NPM package icon"
              />
              <span class="truncate">View on NPM</span>
            </a>
          </div>
          <div class="grid grid-cols-3 gap-8 mb-2">
            <div class="text-center group cursor-pointer">
              <div
                class="text-2xl md:text-3xl font-extrabold mb-1 group-hover:text-yellow-300 transition-colors duration-300"
              >
                50+
              </div>
              <div class="text-sm opacity-80">Schema Fields</div>
            </div>
            <div class="text-center group cursor-pointer">
              <div
                class="text-2xl md:text-3xl font-extrabold mb-1 group-hover:text-green-300 transition-colors duration-300"
              >
                Zero
              </div>
              <div class="text-sm opacity-80">Dependencies</div>
            </div>
            <div class="text-center group cursor-pointer">
              <div
                class="text-2xl md:text-3xl font-extrabold mb-1 group-hover:text-blue-300 transition-colors duration-300"
              >
                100%
              </div>
              <div class="text-sm opacity-80">TypeScript</div>
            </div>
          </div>
          <p class="text-xs opacity-70 text-center lg:text-left">
            * Runtime dependencies: 0
          </p>
        </div>
        <div class="flex justify-center lg:justify-end w-full min-w-0">
          <div
            class="bg-slate-800 rounded-2xl overflow-hidden shadow-2xl w-full max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg xl:max-w-xl min-w-0"
          >
            <div
              class="bg-slate-700 px-4 sm:px-6 py-3 sm:py-4 border-b border-slate-600 flex items-center"
            >
              <div class="flex gap-1.5 sm:gap-2 mr-3 sm:mr-4">
                <span class="w-2.5 h-2.5 sm:w-3 sm:h-3 bg-red-500 rounded-full"
                ></span>
                <span
                  class="w-2.5 h-2.5 sm:w-3 sm:h-3 bg-yellow-500 rounded-full"
                ></span>
                <span
                  class="w-2.5 h-2.5 sm:w-3 sm:h-3 bg-green-500 rounded-full"
                ></span>
              </div>
              <div
                class="text-slate-300 text-xs sm:text-sm font-medium truncate"
              >
                portfolio.ts
              </div>
            </div>
            <div class="p-3 sm:p-4 md:p-6 xl:p-8 overflow-x-auto min-w-0">
              <pre
                class="text-xs sm:text-sm xl:text-base leading-relaxed text-slate-200 mono min-w-0 whitespace-pre-wrap break-words overflow-wrap-anywhere word-break-break-all">
								<code class="break-words whitespace-pre-wrap overflow-wrap-anywhere word-break-break-all">
<span class="token-import">import</span> <span class="token-punctuation">&#123;</span> <span class="token-variable">DevFolioSchema</span> <span class="token-punctuation">&#125;</span> <span class="token-import">from</span> <span class="token-string">'devfolio-json-schema'</span><span class="token-punctuation">;</span>

<span class="token-comment">// Your portfolio data with full TypeScript support</span>
<span class="token-keyword">const</span> <span class="token-variable">portfolio</span> <span class="token-operator">=</span> <span class="token-punctuation">&#123;</span>
  <span class="token-property">basics</span><span class="token-punctuation">:</span> <span class="token-punctuation">&#123;</span>
    <span class="token-property">name</span><span class="token-punctuation">:</span> <span class="token-string">"John Doe"</span><span class="token-punctuation">,</span>
    <span class="token-property">label</span><span class="token-punctuation">:</span> <span class="token-string">"Full Stack Developer"</span><span class="token-punctuation">,</span>
    <span class="token-property">email</span><span class="token-punctuation">:</span> <span class="token-string">"john@example.com"</span><span class="token-punctuation">,</span>
    <span class="token-property">website</span><span class="token-punctuation">:</span> <span class="token-string">"https://johndoe.dev"</span>
  <span class="token-punctuation">&#125;</span><span class="token-punctuation">,</span>
  <span class="token-property">skills</span><span class="token-punctuation">:</span> <span class="token-punctuation">[</span><span class="token-operator">...</span><span class="token-punctuation">]</span><span class="token-punctuation">,</span>
  <span class="token-property">experience</span><span class="token-punctuation">:</span> <span class="token-punctuation">[</span><span class="token-operator">...</span><span class="token-punctuation">]</span>
<span class="token-punctuation">&#125;</span><span class="token-punctuation">;</span>

<span class="token-comment">// Validate with detailed error messages</span>
<span class="token-keyword">const</span> <span class="token-variable">result</span> <span class="token-operator">=</span> <span class="token-function">DevFolioSchema</span><span class="token-punctuation">.</span><span class="token-function">safeParse</span><span class="token-punctuation">(</span><span class="token-variable">portfolio</span><span class="token-punctuation">)</span><span class="token-punctuation">;</span>
								</code>
							</pre>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-32 bg-slate-50">
      <div class="max-w-6xl 2xl:max-w-screen-xl mx-auto px-6 lg:px-8 2xl:px-12">
        <div class="text-center mb-16">
          <h2
            class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4"
          >
            Why Choose DevFolio JSON Schema?
          </h2>
          <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
            Modern developer portfolios need modern solutions. Built with
            TypeScript, validated with Zod, and designed for the future.
          </p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div
            class="bg-white p-8 rounded-2xl shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-xl"
          >
            <div class="text-purple-600 mb-6">
              <Code
                size={32}
                aria-label="Code icon representing TypeScript development"
              />
            </div>
            <h3 class="text-xl md:text-2xl font-bold text-gray-900 mb-4">
              TypeScript First
            </h3>
            <p class="text-gray-600 leading-relaxed">
              Built from the ground up with TypeScript. Get full intellisense,
              type safety, and compile-time validation for your portfolio data.
            </p>
          </div>
          <div
            class="bg-white p-8 rounded-2xl shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-xl"
          >
            <div class="text-purple-600 mb-6">
              <CheckCircle
                size={32}
                aria-label="Check circle icon representing Zod validation"
              />
            </div>
            <h3 class="text-xl md:text-2xl font-bold text-gray-900 mb-4">
              Zod Validation
            </h3>
            <p class="text-gray-600 leading-relaxed">
              Powered by Zod for runtime type checking and detailed error
              messages. Catch data issues before they become problems.
            </p>
          </div>
          <div
            class="bg-white p-8 rounded-2xl shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-xl"
          >
            <div class="text-purple-600 mb-6">
              <GraduationCap
                size={32}
                aria-label="Graduation cap icon representing MOOC support"
              />
            </div>
            <h3 class="text-xl md:text-2xl font-bold text-gray-900 mb-4">
              MOOC Support
            </h3>
            <p class="text-gray-600 leading-relaxed">
              First-class support for online courses, certifications, and modern
              learning platforms like Coursera, edX, and Udemy.
            </p>
          </div>
          <div
            class="bg-white p-8 rounded-2xl shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-xl"
          >
            <div class="text-purple-600 mb-6">
              <Briefcase
                size={32}
                aria-label="Briefcase icon representing professional ready features"
              />
            </div>
            <h3 class="text-xl md:text-2xl font-bold text-gray-900 mb-4">
              Professional Ready
            </h3>
            <p class="text-gray-600 leading-relaxed">
              Comprehensive fields for work experience, skills assessment, and
              professional achievements that recruiters want to see.
            </p>
          </div>
          <div
            class="bg-white p-8 rounded-2xl shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-xl"
          >
            <div class="text-purple-600 mb-6">
              <Smartphone
                size={32}
                aria-label="Smartphone icon representing modern web features"
              />
            </div>
            <h3 class="text-xl md:text-2xl font-bold text-gray-900 mb-4">
              Modern Web
            </h3>
            <p class="text-gray-600 leading-relaxed">
              Support for social profiles, digital portfolios, and modern web
              presence including GitHub, LinkedIn, and personal websites.
            </p>
          </div>
          <div
            class="bg-white p-8 rounded-2xl shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-xl"
          >
            <div class="text-purple-600 mb-6">
              <Zap
                size={32}
                aria-label="Lightning bolt icon representing zero dependencies"
              />
            </div>
            <h3 class="text-xl md:text-2xl font-bold text-gray-900 mb-4">
              Zero Dependencies
            </h3>
            <p class="text-gray-600 leading-relaxed">
              No runtime dependencies means smaller bundle sizes and fewer
              security concerns. Pure TypeScript with optional Zod validation.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Schema Sections -->
    <section class="py-32">
      <div class="max-w-6xl 2xl:max-w-screen-xl mx-auto px-6 lg:px-8 2xl:px-12">
        <div class="text-center mb-16">
          <h2
            class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4"
          >
            Complete Schema Coverage
          </h2>
          <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
            Every aspect of your professional profile, organized and validated
          </p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-12">
          <div class="section-category">
            <div
              class="flex items-center gap-3 mb-6 pb-2 border-b-2 border-gray-200"
            >
              <Database
                size={24}
                class="text-purple-600"
                aria-label="Database icon representing core information"
              />
              <h3 class="text-xl md:text-2xl font-bold text-purple-600">
                Core Information
              </h3>
            </div>
            <div class="space-y-4">
              <div
                class="p-4 bg-slate-50 rounded-lg border-l-4 border-purple-600"
              >
                <strong class="text-purple-600 mono text-sm">basics</strong> - Personal
                information and contact details
              </div>
              <div
                class="p-4 bg-slate-50 rounded-lg border-l-4 border-purple-600"
              >
                <strong class="text-purple-600 mono text-sm">social</strong> - Social
                media and professional profiles
              </div>
              <div
                class="p-4 bg-slate-50 rounded-lg border-l-4 border-purple-600"
              >
                <strong class="text-purple-600 mono text-sm">experience</strong>
                - Work history with detailed descriptions
              </div>
              <div
                class="p-4 bg-slate-50 rounded-lg border-l-4 border-purple-600"
              >
                <strong class="text-purple-600 mono text-sm">education</strong> -
                Academic background and degrees
              </div>
            </div>
          </div>
          <div class="section-category">
            <div
              class="flex items-center gap-3 mb-6 pb-2 border-b-2 border-gray-200"
            >
              <Settings
                size={24}
                class="text-purple-600"
                aria-label="Settings icon representing skills and expertise"
              />
              <h3 class="text-xl md:text-2xl font-bold text-purple-600">
                Skills & Expertise
              </h3>
            </div>
            <div class="space-y-4">
              <div
                class="p-4 bg-slate-50 rounded-lg border-l-4 border-purple-600"
              >
                <strong class="text-purple-600 mono text-sm">skills</strong> - Technical
                and soft skills with ratings
              </div>
              <div
                class="p-4 bg-slate-50 rounded-lg border-l-4 border-purple-600"
              >
                <strong class="text-purple-600 mono text-sm"
                  >certifications</strong
                > - Professional certifications with expiry
              </div>
              <div
                class="p-4 bg-slate-50 rounded-lg border-l-4 border-purple-600"
              >
                <strong class="text-purple-600 mono text-sm">moocs</strong> - Online
                courses and specializations
              </div>
              <div
                class="p-4 bg-slate-50 rounded-lg border-l-4 border-purple-600"
              >
                <strong class="text-purple-600 mono text-sm">projects</strong> -
                Portfolio projects with technologies
              </div>
            </div>
          </div>
          <div class="section-category">
            <div
              class="flex items-center gap-3 mb-6 pb-2 border-b-2 border-gray-200"
            >
              <Award
                size={24}
                class="text-purple-600"
                aria-label="Award icon representing additional sections"
              />
              <h3 class="text-xl md:text-2xl font-bold text-purple-600">
                Additional Sections
              </h3>
            </div>
            <div class="space-y-4">
              <div
                class="p-4 bg-slate-50 rounded-lg border-l-4 border-purple-600"
              >
                <strong class="text-purple-600 mono text-sm">awards</strong> - Recognition
                and awards received
              </div>
              <div
                class="p-4 bg-slate-50 rounded-lg border-l-4 border-purple-600"
              >
                <strong class="text-purple-600 mono text-sm"
                  >achievements</strong
                > - Professional milestones
              </div>
              <div
                class="p-4 bg-slate-50 rounded-lg border-l-4 border-purple-600"
              >
                <strong class="text-purple-600 mono text-sm">languages</strong> -
                Spoken languages with proficiency levels
              </div>
            </div>
          </div>
          <div class="section-category">
            <div
              class="flex items-center gap-3 mb-6 pb-2 border-b-2 border-gray-200"
            >
              <BookOpen
                size={24}
                class="text-purple-600"
                aria-label="Book open icon representing advanced sections"
              />
              <h3 class="text-xl md:text-2xl font-bold text-purple-600">
                Advanced Sections
              </h3>
            </div>
            <div class="space-y-4">
              <div
                class="p-4 bg-slate-50 rounded-lg border-l-4 border-purple-600"
              >
                <strong class="text-purple-600 mono text-sm">volunteer</strong> -
                Community involvement
              </div>
              <div
                class="p-4 bg-slate-50 rounded-lg border-l-4 border-purple-600"
              >
                <strong class="text-purple-600 mono text-sm"
                  >publications</strong
                > - Articles, papers, and technical writings
              </div>
              <div
                class="p-4 bg-slate-50 rounded-lg border-l-4 border-purple-600"
              >
                <strong class="text-purple-600 mono text-sm">references</strong>
                - Professional references and recommendations
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Code Examples -->
    <section class="py-32 bg-slate-50">
      <div class="max-w-5xl 2xl:max-w-screen-lg mx-auto px-6 lg:px-8 2xl:px-12">
        <div class="text-center mb-16">
          <h2
            class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4"
          >
            See It In Action
          </h2>
          <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
            Explore different sections of the schema with real examples
          </p>
        </div>
        <div class="max-w-4xl mx-auto">
          <div
            class="flex flex-wrap gap-2 mb-8 justify-center overflow-x-auto pb-2"
          >
            <button
              class="tab-button bg-purple-600 text-white px-6 py-3 rounded-lg font-medium transition-all duration-300 cursor-pointer hover:bg-purple-700 min-h-[48px] active"
              data-tab="basics">Basics</button
            >
            <button
              class="tab-button bg-gray-200 text-gray-700 px-6 py-3 rounded-lg font-medium transition-all duration-300 cursor-pointer hover:bg-gray-300 min-h-[48px]"
              data-tab="experience">Experience</button
            >
            <button
              class="tab-button bg-gray-200 text-gray-700 px-6 py-3 rounded-lg font-medium transition-all duration-300 cursor-pointer hover:bg-gray-300 min-h-[48px]"
              data-tab="skills">Skills</button
            >
            <button
              class="tab-button bg-gray-200 text-gray-700 px-6 py-3 rounded-lg font-medium transition-all duration-300 cursor-pointer hover:bg-gray-300 min-h-[48px]"
              data-tab="moocs">MOOCs</button
            >
            <button
              class="tab-button bg-gray-200 text-gray-700 px-6 py-3 rounded-lg font-medium transition-all duration-300 cursor-pointer hover:bg-gray-300 min-h-[48px]"
              data-tab="projects">Projects</button
            >
          </div>

          <div class="tab-content active" data-tab="basics">
            <div class="bg-slate-800 rounded-2xl overflow-hidden shadow-xl">
              <div class="bg-slate-700 px-6 py-4 border-b border-slate-600">
                <div class="text-slate-300 text-base font-medium">
                  basics-example.json
                </div>
              </div>
              <pre
                class="p-4 sm:p-8 xl:p-10 overflow-x-auto bg-slate-800 text-xs sm:text-sm xl:text-base leading-relaxed text-slate-200 mono whitespace-pre-wrap break-words overflow-wrap-anywhere">
								<code class="break-words whitespace-pre-wrap overflow-wrap-anywhere">
<span class="token-punctuation">&#123;</span>
  <span class="token-property">"basics"</span><span class="token-punctuation">:</span> <span class="token-punctuation">&#123;</span>
    <span class="token-property">"name"</span><span class="token-punctuation">:</span> <span class="token-string">"John Doe"</span><span class="token-punctuation">,</span>
    <span class="token-property">"label"</span><span class="token-punctuation">:</span> <span class="token-string">"Senior Full Stack Developer"</span><span class="token-punctuation">,</span>
    <span class="token-property">"picture"</span><span class="token-punctuation">:</span> <span class="token-string">"https://johndoe.dev/avatar.jpg"</span><span class="token-punctuation">,</span>
    <span class="token-property">"email"</span><span class="token-punctuation">:</span> <span class="token-string">"john@johndoe.dev"</span><span class="token-punctuation">,</span>
    <span class="token-property">"phone"</span><span class="token-punctuation">:</span> <span class="token-string">"+1-555-0123"</span><span class="token-punctuation">,</span>
    <span class="token-property">"website"</span><span class="token-punctuation">:</span> <span class="token-string">"https://johndoe.dev"</span><span class="token-punctuation">,</span>
    <span class="token-property">"summary"</span><span class="token-punctuation">:</span> <span class="token-string">"Experienced developer with 8+ years in web technologies..."</span><span class="token-punctuation">,</span>
    <span class="token-property">"location"</span><span class="token-punctuation">:</span> <span class="token-punctuation">&#123;</span>
      <span class="token-property">"address"</span><span class="token-punctuation">:</span> <span class="token-string">"123 Tech Street"</span><span class="token-punctuation">,</span>
      <span class="token-property">"city"</span><span class="token-punctuation">:</span> <span class="token-string">"San Francisco"</span><span class="token-punctuation">,</span>
      <span class="token-property">"region"</span><span class="token-punctuation">:</span> <span class="token-string">"CA"</span><span class="token-punctuation">,</span>
      <span class="token-property">"postalCode"</span><span class="token-punctuation">:</span> <span class="token-string">"94105"</span><span class="token-punctuation">,</span>
      <span class="token-property">"countryCode"</span><span class="token-punctuation">:</span> <span class="token-string">"US"</span>
